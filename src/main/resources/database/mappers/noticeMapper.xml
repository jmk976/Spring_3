<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
 <mapper namespace="com.iu.s3.notice.NoticeDAO"> 
 

 	<select id="getSelect" parameterType="NoticeDTO" resultType="NoticeDTO">
 		select * from notice where num = #{num}
 	</select>
  
	  <insert id="setInsert" parameterType="NoticeDTO">
	   insert into notice values(notice_seq.nextval, #{title}, '관리자', sysdate, 0, #{contents})
	  </insert>
	  
	  <update id="setUpdate" parameterType="NoticeDTO">
	   update notice set title=#{title}, contents=#{contents} where num = #{num}
	  </update>
	  
	  <delete id="setDelete" parameterType="NoticeDTO">
	  delete notice where num = #{num}
	  </delete>
	  
	  <update id="setHitUpdate" parameterType="NoticeDTO">
	    update notice set hit=#{hit+1} where num=#{num}
	  </update>
	  
	 <select id="getList" resultType="NoticeDTO" parameterType="Pager">
	    select * from
			(select rownum R, N.* from 
				(select * from notice where num>0 order by num desc) N)
		where R between #{startRow} and #{lastRow}
	  
	  </select> 
	  
	  <select id="getTotalCount" resultType="Long">
	      select count(num) from notice
	  </select>
 
 </mapper>