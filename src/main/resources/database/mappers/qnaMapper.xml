<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iu.s3.board.qna.QnaDAO"> 

	 <insert id="setFileInsert" parameterType="BoardFileDTO">
	      insert into qnaFiles values (file_seq.nextval, #{num}, #{fileName}, #{originName}) 
	 </insert>
	 

	 <update id="setReplyUpdate" parameterType="QnaDTO">
	      update qna set step=step +1 where ref=#{ref} and step >#{step}
	 </update>
	 
	 <insert id="setReply" parameterType="QnaDTO">
	    insert into qna values(qna_seq.nextval, #{title}, #{writer}, sysdate, 0, #{contents}, #{ref}, #{step}, #{depth})
	 </insert>
	 
	<update id="setHitUpdate" parameterType="boardDTO">
        update qna set hit=hit+1 where num =#{num}	
	 </update>

	<select id="getSelect" parameterType="BoardDTO" >
	   select *
	   from qna 
	   where num =#{num}
	</select>
	
	
	
	<select id="getNum" resultType="java.lang.Long">
	    select qna_seq.nextval from dual
	</select>

	<insert id="setInsert" parameterType="BoardDTO">
	    <selectKey keyProperty="num" resultType="java.lang.Long" order="BEFORE"> 
	    	select qna_seq.nextval from dual 
	    </selectKey>
		insert into qna values (#{num}, #{title}, #{writer}, sysdate, 0, #{contents}, #{num},0,0)
	</insert>

	<select id="getList" resultType="QnaDTO" parameterType="Pager">
		select * from
		(select rownum R, Q.* from
			(select * from qna 
			where 
				<choose>
				   <when test="kind =='Writer'">
				       writer
				   </when>
				   
				   <when test="kind =='Contents'">
				       contents
				   </when>
				   
				   <otherwise>
				       title 
				   </otherwise>
				   
				 </choose>
				 like '%'||#{search}||'%' and num>0 order by ref desc, step asc) Q)
	 where R between #{startRow} and #{lastRow}	 
	</select>
	
	<select id="getTotalCount" resultType="Long" parameterType="Pager">
	      select count(num) from qna
	      where
	      <choose>
				   <when test="kind =='Writer'">
				       writer
				   </when>
				   
				   <when test="kind =='Contents'">
				       contents
				   </when>
				   
				   <otherwise>
				       title 
				   </otherwise>
				   
				 </choose>
				 like '%'||#{search}||'%' and num>0
	  </select>
	  
	  <delete id="setDelete" parameterType="BoardDTO">
	  	delete qna where num=#{num}
	  </delete>
	  
	  <update id="setUpdate" parameterType="BoardDTO">
	     update qna set title=#{title}, contents=#{contents} where num=#{num}
	  </update>
	  
	  


</mapper>